<h1>ユーザー編集</h1>

<!-- エラーメッセージ -->
<div class='my-4 text-danger'>
	<% @user.errors.full_messages.each do |message| %> <!-- saveした時にエラーあったら -->
		<div class='mb-1'>※ <%= message %></div>
	<% end %>
</div>

<%= form_tag("/user/#{@user.id}/update") do %>
	<p>ユーザー名	<input name='name' value='<%= @user.name %>'></p>
	<p>メールアドレス<input name='email' value='<%= @user.email %>'></p>
	<p>パスワード<input type='password' name='password' value='<%= @user.password %>'></p>
	<input type='submit' value='更新'>
<% end %>