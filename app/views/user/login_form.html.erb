<h1>ログインページ</h1>

<!-- エラーメッセージ -->
<% if @error_message %>
	<%= @error_message %>
<% end %>

<%= form_tag('/login') do %>
	<p>メールアドレス
		<input
			name='email'
			value="<%= @email %>"
		>
	</p>
	<p>パスワード
		<input 
			type='password' 
			name='password' 
			value="<%= @password %>"
		>
	</p>
	<input type='submit' value='ログイン'>
<% end %>